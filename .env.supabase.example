# Supabase Environment Variables
# Copy this to .env.local and fill in your Supabase project details

# Get these from your Supabase project settings: https://app.supabase.com/
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key for admin operations (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL (automatically generated by Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Optional: Enable RLS (Row Level Security) - recommended for production
SUPABASE_RLS_ENABLED=true

# Admin configuration
ADMIN_EMAIL=admin@arpozan.com
ADMIN_PASSWORD=secure-admin-password-123

# Application settings
APP_URL=http://localhost:3000
NODE_ENV=development